# LLM Configuration
LLM_TYPE=local  # Options: local, remote
LLAMA_API_URL=http://localhost:11434/api/generate
LLAMA_MODEL=llama3.2:3b
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=300

# Remote LLM Configuration (only used if LLM_TYPE=remote)
REMOTE_LLM_API_URL=https://api.example.com/v1/chat/completions
REMOTE_LLM_API_KEY=your_api_key_here
REMOTE_LLM_MODEL=gpt-4
REMOTE_LLM_TEMPERATURE=0.1
REMOTE_LLM_TIMEOUT=60

# OCR Configuration
OCR_ENGINE=paddleocr
OCR_LANGUAGES=en
OCR_GPU=False

# OCR Agent Configuration
OCR_LLM_VALIDATION=False          # Enable/disable LLM validation
OCR_CONFIDENCE_THRESHOLD=0.85     # Only validate if confidence < 85%
OCR_MIN_TEXT_LENGTH=100           # Only validate if text > 100 chars


# Processing
TARGET_DPI=600

# MCP Configuration (NEW)
MCP_SERVER_URL=http://localhost:8000
MCP_ENABLED=true
MCP_TIMEOUT=30

# POST Configuration (NEW)
POST_ENABLED=true
POST_VALIDATION=true
ALLOW_SAMPLE_VALUES=true

# Paths
INPUT_DIR=input
OUTPUT_DIR=output
LOG_DIR=logs
